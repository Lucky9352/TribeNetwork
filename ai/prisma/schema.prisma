generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  extensions = [uuid_ossp(map: "uuid-ossp", schema: "extensions"), vector]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model PostEmbedding {
  id           String   @id @default(uuid())
  flarumPostId Int      @unique
  discussionId Int
  postNumber   Int
  title        String
  slug         String
  content      String
  username     String
  isPrivate    Boolean  @default(false)
  groupIds     Int[]    @default([])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([discussionId])
  @@index([isPrivate])
  @@index([createdAt])
  @@map("post_embeddings")
}

model SyncState {
  id           String   @id @default("flarum_posts")
  lastSyncedAt DateTime @default(now())
  lastPostId   Int      @default(0)
  postsIndexed Int      @default(0)
  updatedAt    DateTime @updatedAt

  @@map("sync_state")
}

model SearchCache {
  id        String   @id @default(uuid())
  queryHash String   @unique
  query     String
  results   Json
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([expiresAt])
  @@map("search_cache")
}

model partnership_inquiries {
  id             String   @id
  name           String
  email          String
  companyWebsite String?
  role           String?
  budgetRange    String?
  message        String?
  status         String   @default("pending")
  createdAt      DateTime @default(now())
  updatedAt      DateTime
}

model university_requests {
  id        String   @id
  name      String
  email     String
  school    String
  classYear String?
  phone     String?
  instagram String?
  message   String?
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model newsletter_subscribers {
  id           String   @id
  email        String   @unique
  isSubscribed Boolean  @default(true)
  source       String   @default("footer")
  createdAt    DateTime @default(now())
  updatedAt    DateTime
}

model admin_users {
  id           String   @id
  email        String   @unique
  passwordHash String
  name         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime
}

model featured_universities {
  id        String   @id
  name      String   @unique
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime
}
