# ===========================================
# Environment Variables for TribeNetwork WWW
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# Database Configuration (Supabase PostgreSQL)
# Get these from your Supabase project settings
DATABASE_URL="postgresql://USER:PASSWORD@HOST:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://USER:PASSWORD@HOST:5432/postgres"

# ===========================================
# App URLs (Public - accessible in browser)
# ===========================================
# Leave empty to use default internal routes (/community, /ai, etc.)
# Set external URLs to redirect to your deployed apps

NEXT_PUBLIC_COMMUNITY_URL="/community"
NEXT_PUBLIC_AI_URL="/ai"
NEXT_PUBLIC_MOBILE_APP_URL="#"

# ===========================================
# Social Media Links (Public)
# ===========================================
NEXT_PUBLIC_TWITTER_URL="#"
NEXT_PUBLIC_INSTAGRAM_URL="#"
NEXT_PUBLIC_LINKEDIN_URL="#"
NEXT_PUBLIC_GITHUB_URL="#"

# ===========================================
# Optional: Authentication
# ===========================================
# NEXTAUTH_URL="http://localhost:3000"
# NEXTAUTH_SECRET="your-secret-key"
# NEXT_PUBLIC_APP_URL="http://localhost:3000"
