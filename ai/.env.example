# =============================================================================
# TribeAI Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# AI API Configuration
# -----------------------------------------------------------------------------
# DeepSeek API key (Primary for chat)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# OpenAI API key (Required for Embeddings/Vector Search)
OPENAI_API_KEY=your_openai_api_key_here

# You.com API Key (Required for Web Search & External Events)
YOU_API_KEY=your_you_api_key_here

# Optional: Custom DeepSeek API URL (defaults to https://api.deepseek.com/v1/chat/completions)
# DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions

# Optional: Internal API key to protect the /api/sync endpoint
# SYNC_API_KEY=your_random_secret_string

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL for AI App)
# -----------------------------------------------------------------------------
# Transaction pooler URL (for runtime queries)
DATABASE_URL="postgresql://user:pass@host:6543/postgres?pgbouncer=true"

# Session/Direct URL (for migrations and direct connections)
DIRECT_URL="postgresql://user:pass@host:5432/postgres"

# -----------------------------------------------------------------------------
# Flarum MySQL Database (For Forum Content Access)
# -----------------------------------------------------------------------------
# IMPORTANT: For Railway production, use the internal host (e.g. mysql.railway.internal)
# For local dev, use the public proxy URL.
MYSQL_HOST=mysql.railway.internal
MYSQL_PORT=3306
MYSQL_DATABASE=railway
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password_here

# -----------------------------------------------------------------------------
# Flarum Configuration
# -----------------------------------------------------------------------------
# Base URL of the Flarum forum (for generating post links)
FLARUM_URL=https://your-flarum-site.railway.app

# -----------------------------------------------------------------------------
# Next.js Configuration
# -----------------------------------------------------------------------------
# Environment mode: development | production | test
NODE_ENV=production
